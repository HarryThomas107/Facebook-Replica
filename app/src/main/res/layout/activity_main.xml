<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#aabbcc"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#064EFD">
        <TextView
            android:layout_marginLeft="30dp"
            android:text="Facebook"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/baseline_camera_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="7dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/baseline_assignment_ind_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:orientation="vertical"
            android:layout_height="100dp">
            <ImageView
                android:background="@drawable/nullig"
                android:layout_marginBottom="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:text="Your Story"
                android:textSize="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:orientation="vertical"
            android:layout_height="100dp">
            <ImageView
                android:background="@drawable/nullig"
                android:layout_marginBottom="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:text="Your Story"
                android:textSize="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:background="@drawable/nullig"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:text="What's on your mind?"
            android:textColor="#aabbcc"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:layout_width="300dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="340dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:background="@drawable/nullig"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="190dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:layout_width="90dp"
                    android:layout_height="15dp"/>
                <TextView
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:text="5 mins ago"
                    android:layout_width="90dp"
                    android:layout_height="17dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:text="This is a sample post content."
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:background="@drawable/nullig"
            android:layout_width="320dp"
            android:layout_height="200dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:textColor="#0633FA"
                android:text="Like"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
            <TextView
                android:text="Comment"
                android:textColor="#0633FA"
                android:layout_width="70dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Share"
                android:textColor="#0633FA"
                android:layout_width="60dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>